<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivityFragment"
              android:id="@+id/lytPrincipal"
              android:orientation="vertical"
              android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/lytLogo"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgLogo"
            android:src="@drawable/spotnik"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="55sp"
            android:text="@string/txtLogo"
            android:id="@+id/txtLogo"
            android:gravity="center|center_vertical"
            android:textStyle="bold"
            android:textColor="@color/colorLabelText"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdSpotify"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        android:background="@color/colorButtonDarkest"
        android:backgroundTintMode="screen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtSpotify"
            android:text="@string/txtSpotify"
            android:elevation="2dp"
            android:background="@drawable/rectangle"
            android:textColor="@color/colorLabelText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtSpotifySubTitle"
            android:elevation="2dp"
            android:background="@drawable/rectangle"
            android:text="@string/txtSpotifySubTitle"
            android:textColor="@color/colorLabelText"/>

    </android.support.v7.widget.CardView>
</LinearLayout>
